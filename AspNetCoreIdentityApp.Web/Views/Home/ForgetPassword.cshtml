@{
    ViewData["Title"] = "ResetPassword";
}
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")

}
@model ForgetPasswordViewModel


<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>

        }
        <div class="alert alert-info">Şifre Yenileme Linki ,e-posta adresinize gönderilecektir</div>
        <div asp-validation-summary="ModelOnly" class="alert alert-info" role="alert">
        </div>
        <form asp-controller="Home" asp-action="ForgetPassword" method="post">
            <div class="row mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input value="dd@gmail.com" asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
</div>


