@{
    ViewData["Title"] = "SignIn";
}
@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")

}

@model SignInViewModel
<div class="row">
    <div class="col-md-4 offset-md-4">
        <h1>Kullanıcı Girş Formu</h1>
        <div asp-validation-summary="ModelOnly" class="alert alert-info" role="alert">
        </div>
        <form asp-controller="Home" asp-action="SignIn" method="post" asp-route-returnUrl="@Context.Request.Query["returnUrl"]">
            <div class="row mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input value="dd@gmail.com" asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Password" class="col-md-4 col-form-label" asp-for="Password"></label>
                <div class="col-md-8">
                    <input value="abc123" asp-for="Password" class="form-control" type="password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe"></label>
                    </div>

                </div>
                <div class="col-md-6">
                    <a class="float-end" asp-controller="Home" asp-action="ForgetPassword">Şifremi Unuttum</a>
                 </div>

            </div>


            <button type="submit" class="btn btn-primary"> Üye Giriş</button>
            <div>
            </div>
        </form>
    </div>
</div>
